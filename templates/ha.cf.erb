#       File to write debug messages to
debugfile <%= scope.lookupvar('log_dir') %>/ha.log
#       File to write other messages to
logfile <%= scope.lookupvar('log_dir') %>/ha.debug
#
logfacility <%= scope.lookupvar('logfacility') %>
#       keepalive: how many seconds between heartbeats
keepalive <%= scope.lookupvar('keepalive') %>
#   warntime: seconds-to-warning
warntime <%= scope.lookupvar('warntime') %>
#       deadtime: seconds-to-declare-host-dead
deadtime <%= scope.lookupvar('deadtime') %>
#   initdead: the maximum time HB waits for other nodes to check in at cluster startup
initdead <%= scope.lookupvar('initdead') %>
#       What UDP port to use for udp or ppp-udp communication?
udpport <%= scope.lookupvar('udpport') %>
<% if scope.lookupvar('crm') -%>
#Use cms to manage resources
crm respawn
<% end -%>
<% if scope.lookupvar('auto_failback') -%>
auto_failback on
<% else -%>
auto_failback off
<% end -%>
<% if scope.lookupvar('watchdog') -%>
watchdog /dev/watchdog
<% end -%>
