# Generated by puppet
#
#
# File to write debug messages to
debugfile <%= scope.lookupvar('heartbeat::log_dir') %>/ha.log
# File to write other messages to
logfile <%= scope.lookupvar('heartbeat::log_dir') %>/ha.debug
#
logfacility <%= scope.lookupvar('heartbeat::logfacility') %>
# keepalive: how many seconds between heartbeats
keepalive <%= scope.lookupvar('heartbeat::keepalive') %>
# warntime: seconds-to-warning
warntime <%= scope.lookupvar('heartbeat::warntime') %>
# deadtime: seconds-to-declare-host-dead
deadtime <%= scope.lookupvar('heartbeat::deadtime') %>
# initdead: the maximum time HB waits for other nodes to check in at cluster startup
initdead <%= scope.lookupvar('heartbeat::initdead') %>
# baud - set serial communication speed
baud 38400
<% if scope.lookupvar('heartbeat::udpport') != '' -%>
# What UDP port to use for udp or ppp-udp communication?
udpport <%= scope.lookupvar('heartbeat::udpport') %>
<% end -%>
<% if scope.lookupvar('heartbeat::crm') -%>
# Use cms to manage resources
crm respawn
<% end -%>
